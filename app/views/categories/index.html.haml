%p#notice= notice
%h1 Listing Categories
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    = search_form_for @search,:builder => SimpleForm::FormBuilder do |f|
      = f.input :name_cont,:label => "Name"
      = f.submit "Search",class: "btn btn-info search"
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= link_to 'Show', category,{ :class=>"btn btn-primary btn-sm" }
        %td= link_to 'Edit', edit_category_path(category),{ :class=>"btn btn-success btn-sm" }
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm"
= will_paginate @categories
%br/
= link_to 'New Category', new_category_path, { :class=>"btn btn-success btn-lg" }
