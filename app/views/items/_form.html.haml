= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :barcode
    %br/
    = f.text_field :barcode
  .field
    = f.label :category_id
    %br/
    = f.text_field :category_id
  .field
    = f.label :publisher
    %br/
    = f.text_field :publisher
  .field
    = f.label :year
    %br/
    = f.number_field :year
  .actions
    = f.submit
