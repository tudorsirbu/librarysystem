= simple_form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = f.input :title
  .field
    = f.input :barcode
  .field
    = f.input :category_id
  .field
    = f.input :publisher
  .field
    = f.input :year
  .actions
    = f.submit :class => "btn btn-info"
