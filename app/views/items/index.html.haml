%p#notice= notice
%h1 Listing Items
%table.table.table-striped.datatable
  %thead
    %tr
      %th Title
      %th Barcode
      %th Category
      %th Publisher
      %th Year
      %th{:colspan => "3"}
  %tbody
    - @items.each do |item|
      %tr
        %td= item.title
        %td= item.isbn
        %td= Category.find(item.category_id).name.humanize
        %td= item.publisher
        %td= item.year
        %td= link_to 'Show', item, { :class=>"btn btn-primary btn-sm" }
        %td= link_to 'Edit', edit_item_path(item), { :class=>"btn btn-success btn-sm" }
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm"
%br/
= link_to 'New Item', new_item_path, { :class=>"btn btn-success btn-lg" }
