%p#notice= notice
%h1 Listing Items
%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Barcode
      %th Category
      %th Publisher
      %th Year
      %th{:colspan => "3"}
  %tbody
    = search_form_for @search do |f|
      = f.label :title_cont
      = f.search_field :title_cont
      = f.label :barcode_cont
      = f.search_field :barcode_cont
      = f.submit "Search",class: "btn btn-info search"
    - @items.each do |item|
      %tr
        %td= item.title
        %td= item.barcode
        %td= Category.find(item.category_id).name.humanize
        %td= item.publisher
        %td= item.year
        %td= button_to 'Show', item, { :class=>"btn btn-primary btn-sm" }
        %td= button_to 'Edit', edit_item_path(item), { :class=>"btn btn-success btn-sm" }
        %td= button_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm"
= will_paginate @items
%br/
= link_to 'New Item', new_item_path, { :class=>"btn btn-success btn-lg" }

