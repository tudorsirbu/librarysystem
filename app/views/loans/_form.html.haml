= form_for @loan do |f|
  - if @loan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@loan.errors.count, "error")} prohibited this loan from being saved:"
      %ul
        - @loan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :item_id
    = f.number_field :item_id
  .field
    = f.label :due_date
    = f.datetime_select :due_date
  .actions
    = f.submit 'Save'
