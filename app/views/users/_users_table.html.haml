- if users_type == 'active'
  - row_class = 'success'
- elsif users_type == 'total'
  - row_class = 'info'
- elsif users_type == 'inactive'
  - row_class = 'warning'
%thead
  %tr
    %th Ucard no
    %th Surname
    %th Forename
    %th Job title
    %th{:colspan => "3"}
%tbody
  - users.each do |user|
    %tr{class: row_class}
      %td= user.ucard_no
      %td= user.surname
      %td= user.forename
      %td= user.job_title
      %td= link_to 'Show Info', user, { :class=>"btn btn-primary btn-sm" }
      %td= link_to 'Edit', edit_user_path(user), { :class=>"btn btn-success btn-sm" }
      %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm"